# 医疗联合前端环境配置

# API 基础地址
# 开发环境 - 本地后端
VITE_API_BASE_URL=http://localhost:8080/api/v1

# 生产环境示例
# VITE_API_BASE_URL=https://api.medical-union.com/api/v1

# API 请求超时时间（毫秒）
VITE_API_TIMEOUT=10000

# 是否强制使用 Mock API（开发调试用）
# true: 强制使用前端 mock
# false 或不设置: 根据其他配置决定
VITE_USE_MOCK_API=false

# 是否启用真实 API（开发环境）
# true: 开发环境使用真实后端
# false 或不设置: 开发环境使用 mock
VITE_USE_REAL_API=true

# 应用标题
VITE_APP_TITLE=医疗联合管理系统

# 调试模式
VITE_DEBUG=true